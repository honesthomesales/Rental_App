# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/small_business_assistant"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=small_business_assistant
DATABASE_USER=username
DATABASE_PASSWORD=password

# API Configuration
API_PORT=3001
API_HOST=localhost
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=small-business-assistant-files

# Voice Recognition API (Optional - for enhanced voice processing)
VOICE_API_KEY=your-voice-api-key
VOICE_API_ENDPOINT=https://api.voice-service.com

# GPS/Geolocation Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mobile App Configuration
MOBILE_APP_ID=com.smallbusinessassistant.app
MOBILE_APP_NAME="Small Business Assistant"

# Web Dashboard Configuration
WEB_PORT=3000
WEB_HOST=localhost

# Development Configuration
LOG_LEVEL=info
DEBUG=true
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Processing (for future invoice payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key 